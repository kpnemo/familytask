{
  "name": "family-tasks",
  "version": "1.0.11",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "test": "node scripts/test-runner.js",
    "test:unit": "jest --testPathPattern=unit",
    "test:unit:watch": "jest --testPathPattern=unit --watch",
    "test:unit:coverage": "jest --testPathPattern=unit --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:smoke": "npm run build && npm run test:unit && playwright test tests/e2e/auth.spec.ts",
    "test:setup": "node scripts/setup-test-db.js setup",
    "test:clean": "node scripts/setup-test-db.js clean",
    "migrate:apply": "node scripts/apply-migration.js",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate deploy",
    "deploy": "node scripts/deploy.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@prisma/client": "^6.8.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@vercel/postgres": "^0.10.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "lucide-react": "^0.511.0",
    "next": "15.3.3",
    "next-auth": "^4.24.11",
    "pg": "^8.16.0",
    "prisma": "^6.8.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.4",
    "tailwind-merge": "^3.3.0",
    "twilio": "^5.7.0",
    "zod": "^3.25.42"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@jest/globals": "^30.0.0-beta.3",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^30.0.0-beta.3",
    "playwright": "^1.52.0",
    "supertest": "^7.1.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
